{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": false,
        "jsx": "preserve",
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "rootDir": "src",
        "sourceMap": true,
        "baseUrl": "src/",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "inlineSources": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["src/**/*", ".next/types/**/*.ts", "dist/types/**/*.ts"],
    "exclude": ["node_modules", ".next"]
}
